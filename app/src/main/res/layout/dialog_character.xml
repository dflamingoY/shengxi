<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_dismiss"
    android:layout_width="match_parent"
    android:layout_height="249dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/shape_bound_r_17_white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_Avatar"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_stroke_avatar_character">

                <ImageView
                    android:id="@+id/iv_Avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_alignLeft="@+id/iv_Avatar"
                    android:layout_alignRight="@+id/iv_Avatar"
                    android:layout_alignTop="@+id/iv_Avatar"
                    android:layout_alignBottom="@+id/iv_Avatar"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_img_layer" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_Avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:includeFontPadding="false"
                android:shadowColor="#33272b2b"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="3.0"
                android:singleLine="true"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:includeFontPadding="false"
                android:shadowColor="#33272b2b"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="3.0"
                android:singleLine="true"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="49dp"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="12sp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:rotation="90"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_height="240dp">

        <org.xiaoxingqi.shengxi.wedgit.ProgressSeekBar
            android:id="@+id/seekBar"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:thumb="@drawable/shape_test_slide"
            android:progressDrawable="@drawable/selector_test_slide_layer"
            android:progress="0" />

    </RelativeLayout>

</RelativeLayout>