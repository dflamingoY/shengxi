<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBackground">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="84dp"
        android:src="@mipmap/icon_user_songs_empty" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="246dp"
        android:text="@string/string_music_3"
        android:textColor="@color/color_BDBDBD"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/frameHomeUserResource"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="@color/colorContentBackground"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="81dp"
            android:src="@mipmap/icon_user_songs_empty" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="246dp">

            <TextView
                android:id="@+id/tv_UploadPhoto"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_blue_r_20"
                android:gravity="center"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:text="记录音乐心情"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/tv_UploadPhoto"
                android:layout_alignTop="@+id/tv_UploadPhoto"
                android:layout_alignEnd="@+id/tv_UploadPhoto"
                android:layout_alignBottom="@+id/tv_UploadPhoto"
                android:background="@drawable/shape_blue_r_20_layer"
                android:clickable="false"
                android:focusable="false" />

        </RelativeLayout>

    </FrameLayout>


</FrameLayout>