<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:src="@mipmap/icon_empty_new_friends" />

    <ImageView
        android:id="@+id/tv_friends_request_hint_1"
        android:layout_width="121dp"
        android:visibility="gone"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="306dp"
        android:src="@drawable/selector_new_friends_empty_list" />

    <TextView
        android:id="@+id/tv_FriendBang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="317dp"
        android:background="@drawable/shape_blue_r_20"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingLeft="61dp"
        android:paddingTop="12dp"
        android:paddingRight="61dp"
        android:paddingBottom="12dp"
        android:text="@string/string_friends_i_2"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_alignStart="@+id/tv_FriendBang"
        android:layout_alignTop="@+id/tv_FriendBang"
        android:layout_alignEnd="@+id/tv_FriendBang"
        android:layout_alignBottom="@+id/tv_FriendBang"
        android:background="@drawable/shape_blue_r_20_layer" />

</RelativeLayout>