<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#b3000000"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_cheers_2"
        android:layout_marginTop="40dp"
        android:textColor="#fffefe"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="285dp"
        android:background="@drawable/shape_round_r_20_white"
        android:layout_marginTop="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="215dp">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            app:cardElevation="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#00ffffff"
            app:cardCornerRadius="50dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_img_layer" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/linearEmptyVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearRecord"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_record_img" />

                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:text="@string/string_sendAct_4"
                    android:textColor="@color/colorIndecators"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_cheers_3"
                android:textColor="@color/color_ff8f8f"
                android:textSize="14sp" />
        </LinearLayout>


        <org.xiaoxingqi.shengxi.wedgit.VoiceProgress
            android:id="@+id/voiceProgress"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearOperatorVoice"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="50dp"
            android:src="@mipmap/icon_cheers_delete"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/ivConfirm"
            android:layout_marginLeft="60dp"
            android:layout_width="50dp"
            android:src="@mipmap/icon_cheers_confirm"
            android:layout_height="50dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="50dp"
        android:src="@mipmap/icon_cheers_close"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="90dp"
        android:layout_height="50dp" />

</FrameLayout>