<?xml version="1.0" encoding="utf-8"?>
<org.xiaoxingqi.shengxi.wedgit.SqureRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2.5dp"
        app:cardBackgroundColor="#00ffffff"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/view_Stroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/draw_round_stoken_send" />

        <View
            android:id="@+id/viewLayer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7fdddddd" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_Delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/cardlayout"
        android:layout_alignRight="@+id/cardlayout"
        android:elevation="2dp"
        android:padding="10dp"
        android:src="@mipmap/icon_x"
        android:visibility="gone" />

</org.xiaoxingqi.shengxi.wedgit.SqureRelativeLayout>