<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:cardElevation="0dp"
    app:cardCornerRadius="19dp"
    android:layout_marginBottom="-19dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorContentBackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重复"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            android:textSize="14sp"
            android:textColor="@color/colorNormalIndecator" />

        <org.xiaoxingqi.shengxi.wedgit.WeekDaysSelectorView
            android:id="@+id/weekMonday"
            android:layout_width="match_parent"
            android:layout_marginTop="36dp"
            android:layout_height="46dp"
            app:echoTitle="星期一" />

        <org.xiaoxingqi.shengxi.wedgit.WeekDaysSelectorView
            android:id="@+id/weekTuesday"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:echoTitle="星期二" />

        <org.xiaoxingqi.shengxi.wedgit.WeekDaysSelectorView
            android:id="@+id/weekWed"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:echoTitle="星期三" />

        <org.xiaoxingqi.shengxi.wedgit.WeekDaysSelectorView
            android:id="@+id/weekThu"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:echoTitle="星期四" />

        <org.xiaoxingqi.shengxi.wedgit.WeekDaysSelectorView
            android:id="@+id/weekFri"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:echoTitle="星期五" />

        <org.xiaoxingqi.shengxi.wedgit.WeekDaysSelectorView
            android:id="@+id/weekSat"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:echoTitle="星期六" />

        <org.xiaoxingqi.shengxi.wedgit.WeekDaysSelectorView
            android:id="@+id/weekSun"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:echoTitle="星期日" />

        <LinearLayout
            android:layout_marginTop="38dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="43dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="144dp"
                android:layout_height="46dp"
                android:background="@drawable/shape_gray_r_23"
                android:text="取消"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/colorNormalIndecator" />

            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="144dp"
                android:layout_height="46dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/shape_gray_r_23"
                android:text="@string/string_commit_pwd_5"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/color_switch_check" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>