<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="horizontal">

    <org.xiaoxingqi.shengxi.wedgit.SelectRecommendView
        android:id="@+id/linearGood"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_music_score"
        android:gravity="center"
        app:isSelected_img="false"
        app:normalColor="@color/colorTextGray"
        app:select_Title="@string/string_music_10"
        app:select_img_id="@mipmap/icon_music_good_normal"
        app:selectedColors="@color/color_ea5455"
        app:selected_img_id="@mipmap/icon_music_good" />

    <org.xiaoxingqi.shengxi.wedgit.SelectRecommendView
        android:id="@+id/linearNormal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@drawable/selector_music_score"
        app:isSelected_img="false"
        app:normalColor="@color/colorTextGray"
        app:select_Title="@string/string_music_11"
        app:select_img_id="@mipmap/icon_music_normal_normal"
        app:selectedColors="@color/color_ea5455"
        app:selected_img_id="@mipmap/icon_music_normal" />

    <org.xiaoxingqi.shengxi.wedgit.SelectRecommendView
        android:id="@+id/linearBad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_music_score"
        android:gravity="center"
        app:isSelected_img="false"
        app:normalColor="@color/colorTextGray"
        app:select_Title="@string/string_music_12"
        app:select_img_id="@mipmap/icon_music_bad_normal"
        app:selectedColors="@color/color_ea5455"
        app:selected_img_id="@mipmap/icon_music_bad" />

</LinearLayout>