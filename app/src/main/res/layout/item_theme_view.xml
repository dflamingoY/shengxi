<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_theme"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_theme_leaves" />

    <ImageView
        android:id="@+id/iv_isSelected"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/iv_theme"
        android:layout_alignRight="@+id/iv_theme"
        android:src="@mipmap/icon_theme_selected"
        android:visibility="gone" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_theme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/iv_theme"
        android:text="白天"
        android:textColor="@color/color_b8b0b0"
        android:textSize="13sp" />

</RelativeLayout>