<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emptyBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorContentBackground"
    android:visibility="visible">

    <ImageView
        android:id="@+id/emptyBg1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:src="@mipmap/icon_empty_chat_list" />

    <TextView
        android:id="@+id/tv_recent_hint_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="268dp"
        android:text="@string/string_chat_i_1"
        android:textColor="@color/colorTextGray"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/tv_Custom"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="323dp"
        android:background="@drawable/shape_blue_r_20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_record" />

        <TextView
            android:id="@+id/tv_recent_hint_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/string_search_movies_2"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/tv_Custom"
        android:layout_alignTop="@+id/tv_Custom"
        android:layout_alignEnd="@+id/tv_Custom"
        android:layout_alignBottom="@+id/tv_Custom"
        android:background="@drawable/shape_blue_r_20_layer" />

    <TextView
        android:id="@+id/message_list_empty_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emptyBg1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>
