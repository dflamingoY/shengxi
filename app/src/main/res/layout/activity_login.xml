<?xml version="1.0" encoding="utf-8"?>
<org.xiaoxingqi.shengxi.wedgit.TransLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:defaultState="content"
    app:emptyLayout="@layout/view_empty"
    app:offlineLayout="@layout/view_offline"
    app:progressLayout="@layout/view_progress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:includeFontPadding="false"
            android:text="@string/app_name"
            android:textColor="#333333"
            android:textSize="52dp" />

        <ImageView
            android:layout_width="206dp"
            android:layout_height="19dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_login_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_National"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="67dp"
                android:gravity="center_vertical"
                android:text="+86"
                android:textColor="#333333"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="22dp"
                android:src="@mipmap/icon_arrow_down" />


            <EditText
                android:id="@+id/et_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/string_loginAct_2"
                android:inputType="number"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/shape_edittext_cursor"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/login_draw_view_line_gray" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/shape_scan"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="@string/string_loginAct_3"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="@string/string_loginAct_4"
                android:textColor="#999999"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_Sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="0dp"
                android:text="@string/string_loginAct_5"
                android:textColor="@color/colorIndecators"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="128dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="58dp"
                    android:layout_height="1dp"
                    android:background="@drawable/login_draw_view_line_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:text="@string/string_loginAct_6"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:layout_width="58dp"
                    android:layout_height="1dp"
                    android:background="@drawable/login_draw_view_line_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="51dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_Sina"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/icon_login_sina" />

                <ImageView
                    android:id="@+id/btn_Wechat"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:src="@mipmap/icon_login_wechat" />

                <ImageView
                    android:id="@+id/btn_QQ"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/icon_login_qq" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_loginAct_7"
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_Trim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_loginAct_8"
                    android:textColor="@color/colorIndecators"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="å’Œ"
                    android:textColor="#999999"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_login_privacy_policy"
                    android:textColor="@color/colorIndecators"
                    android:textSize="11sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</org.xiaoxingqi.shengxi.wedgit.TransLayout>