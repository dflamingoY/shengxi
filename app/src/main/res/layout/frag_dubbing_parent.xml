<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeType"
        android:layout_width="match_parent"
        android:background="@color/colorContentBackground"
        android:layout_height="42dp">

        <org.xiaoxingqi.shengxi.wedgit.AlarmItemClickView
            android:id="@+id/headItemClickView"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />

        <org.xiaoxingqi.shengxi.wedgit.PagerSlidingBlock
            android:id="@+id/toggle_attention"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@drawable/shape_r_11_blue_border"
            app:group_title="@array/arrayAlarm"
            app:normal_size="11sp"
            app:normal_width="55dp"
            app:normal_color="@color/colorTextGray"
            app:selector_color="@color/color_text_white"
            app:slider_color="@color/color_switch_check"
            android:layout_height="22dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/draw_alarm_split_line" />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/relativeType"
        android:id="@+id/viewPagerDub"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</RelativeLayout>
