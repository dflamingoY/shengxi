<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:layout_marginBottom="1dp"
    android:background="@color/colorContentBackground"
    android:backgroundTint="@color/colorContentBackground"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardlayout"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="17dp"
        app:cardElevation="0dp">

        <org.xiaoxingqi.shengxi.wedgit.CustomRoundImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_user_default" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_user_type"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignRight="@+id/cardlayout"
        android:layout_alignBottom="@+id/cardlayout"
        android:src="@drawable/selector_user_use_type"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/cardlayout"
        android:textColor="@color/colorNormalIndecator"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_RemoveBlack"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:text="@string/string_BlackAct_1"
        android:textColor="@color/colorIndecators"
        android:textSize="12sp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrayContent" />

</RelativeLayout>