<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="135dp"
        android:layout_height="121dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@mipmap/icon_home_personal_empty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_personal_nothing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="259dp"
        android:textSize="12sp"
        android:textColor="@color/color_b5b5b5_1" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_personal_meaning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:textSize="12sp"
        android:textColor="@color/colorIndecators" />

</RelativeLayout>