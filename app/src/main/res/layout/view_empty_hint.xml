<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:src="@mipmap/icon_empty_msg_hint" />

    <ImageView
        android:id="@+id/tv_msg_hint_1"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:src="@drawable/selector_msg_notify_empty_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="306dp" />

    <LinearLayout
        android:id="@+id/tv_Record"
        android:layout_width="193dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="317dp"
        android:background="@drawable/shape_blue_r_20"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_record" />

        <TextView
            android:id="@+id/tv_msg_hint_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/string_echo_system_hint_i_2"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_Record"
        android:layout_alignTop="@+id/tv_Record"
        android:layout_alignEnd="@+id/tv_Record"
        android:layout_alignBottom="@+id/tv_Record"
        android:background="@drawable/shape_blue_r_20_layer"
        android:visibility="gone" />

</RelativeLayout>