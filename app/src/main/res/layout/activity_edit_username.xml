<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/btn_Back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/tv_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="17sp" />

            <org.xiaoxingqi.shengxi.wedgit.skinView.SkinStatueText
                android:id="@+id/tv_Commit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:gravity="center"
                android:paddingRight="15dp"
                android:text="@string/string_editDescAct_2"
                android:textColor="@color/colorTextGray"
                android:textSize="15sp"
                app:statusTextSelected="@color/colorNormalIndecator" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrayContent">

        <EditText
            android:id="@+id/et_Name"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_bound_r7_white"
            android:gravity="center_vertical"
            android:hint="@string/string_editNameAct_2"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/colorNormalIndecator"
            android:textColorHint="@color/colorTextGray"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:text="0 / 10"
            android:textColor="@color/colorTextGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="29dp"
            android:text="@string/string_cut_more_than_10"
            android:textColor="@color/colorTextGray"
            android:textSize="12sp" />

    </FrameLayout>

</LinearLayout>