<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.CustomHoverRelative
        android:id="@+id/customRelative"
        android:layout_width="90dp"
        android:visibility="visible"
        android:layout_height="90dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="29dp">

        <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.TouchImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/icon_circle_menu" />

        <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.TouchImageView
            android:id="@+id/ivPre"
            android:layout_width="24dp"
            android:padding="5dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_circle_menu_next"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp" />

        <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.TouchImageView
            android:id="@+id/ivPosition"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="3dp"
            android:src="@mipmap/icon_circle_menu_top"
            android:layout_centerHorizontal="true" />

        <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.TouchImageView
            android:id="@+id/ivNext"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_circle_menu_pre" />

        <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.TouchImageView
            android:id="@+id/ivPlay"
            android:layout_width="31dp"
            android:layout_centerInParent="true"
            android:layout_height="31dp"
            android:src="@drawable/selector_circle_menu_play"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp" />

        <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.TouchImageView
            android:id="@+id/ivAuto"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:padding="5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/selector_circle_menu_auto" />

    </org.xiaoxingqi.shengxi.wedgit.customPlayMenu.CustomHoverRelative>

    <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.TouchSlidView
        android:id="@+id/touchViewRight"
        android:visibility="visible"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@mipmap/icon_circle_menu_little"
        android:layout_gravity="end" />

    <org.xiaoxingqi.shengxi.wedgit.customPlayMenu.TouchSlidView
        android:id="@+id/touchViewLeft"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:visibility="gone"
        android:src="@mipmap/icon_circle_menu_little_left" />

</FrameLayout>