<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_marginTop="1dp"
    android:background="@color/colorContentBackground"
    android:paddingLeft="17dp">

    <ImageView
        android:id="@+id/iv_PlayStatus"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:src="@mipmap/icon_time_machine_playing"
        android:visibility="gone" />

    <org.xiaoxingqi.shengxi.wedgit.SkinColorsTextView
        android:id="@+id/tv_PlayStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/iv_PlayStatus"
        android:textColor="@color/colorNormalIndecator"
        android:textSize="15sp"
        app:textNormalColor="@color/colorNormalIndecator"
        app:textSelectedColor="@color/colorIndecators" />

    <ImageView
        android:id="@+id/iv_isPrivacy"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="21dp"
        android:src="@mipmap/icon_local_privacy"
        android:visibility="gone" />
</RelativeLayout>