<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white_r11">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardLayout"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#00ffffff"
            app:cardCornerRadius="55dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_img_layer" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/iv_user_type"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignRight="@+id/cardLayout"
            android:layout_alignBottom="@+id/cardLayout"
            android:src="@drawable/selector_user_use_type"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivOfficial"
            android:layout_width="41dp"
            android:visibility="gone"
            android:layout_height="41dp"
            android:layout_alignRight="@+id/cardLayout"
            android:layout_alignBottom="@+id/cardLayout"
            android:src="@mipmap/icon_offical_logo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:includeFontPadding="true"
        android:textColor="@color/color_c4c4c4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_frequency_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:includeFontPadding="true"
        android:textColor="@color/colorTextGray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_UserSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:includeFontPadding="true"
        android:textColor="@color/colorTextGray"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/linearTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/string_about_1"
            android:textColor="@color/other_Gray_Color"
            android:textSize="12sp" />

        <org.xiaoxingqi.shengxi.wedgit.skinView.SkinStatueText
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvEmptyTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="@string/string_about_2_i"
            android:textColor="@color/colorIndecators"
            app:statusTextSelected="@color/colorTextGray"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linearContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAchievement"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAchieveTitle"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的成就"
                android:textSize="12sp"
                android:textColor="@color/other_Gray_Color"
                android:includeFontPadding="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日想法:"
                    android:textSize="10sp"
                    android:textColor="@color/colorTextGray"
                    android:includeFontPadding="false" />

                <ImageView
                    android:id="@+id/ivRecordImg"
                    android:layout_marginLeft="11dp"
                    android:layout_width="15dp"
                    android:src="@mipmap/icon_achievemtn_cup"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/tvRecordDays"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="10sp"
                    android:textColor="@color/color_FDC571_B0894F" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_travel_master"
                    android:textSize="10sp"
                    android:textColor="@color/color_b2b2b2"
                    android:includeFontPadding="false" />

                <ImageView
                    android:id="@+id/ivTravelImg"
                    android:layout_marginLeft="11dp"
                    android:layout_width="14dp"
                    android:src="@mipmap/icon_achievement_tranlate"
                    android:layout_height="14dp" />

                <org.xiaoxingqi.shengxi.wedgit.skinView.SkinStatueText
                    android:id="@+id/tvTravelDays"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textSize="10sp"
                    app:statusTextSelected="@color/color_b2b2b2"
                    android:textColor="@color/color_FDC571_B0894F" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>