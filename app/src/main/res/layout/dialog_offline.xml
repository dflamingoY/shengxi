<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--
        <ImageView

            android:layout_width="312dp"
            android:layout_height="274dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_offline" />
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/shape_bound_r7_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="109dp"
            android:layout_height="124dp"
            android:src="@mipmap/view_offline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="31dp"
            android:text="@string/string_net_error_hint"
            android:textColor="@color/colorText666666"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_Click"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:src="@mipmap/icon_error_net_close" />

</LinearLayout>