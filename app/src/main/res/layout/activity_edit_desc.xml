<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBackground"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/btn_Back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:padding="4dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/string_editDescAct_1"
            android:textColor="@color/colorNormalIndecator"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_Commit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/string_editDescAct_2"
            android:textColor="@color/colorNormalIndecator"
            android:textSize="15sp" />


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrayContent">

        <EditText
            android:id="@+id/et_Desc"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/shape_bound_r7_white"
            android:gravity="start"
            android:hint="@string/string_editDescAct_3"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6dp"
            android:paddingLeft="15dp"
            android:paddingTop="9dp"
            android:paddingRight="15dp"
            android:paddingBottom="9dp"
            android:textColor="@color/colorNormalIndecator"
            android:textColorHint="@color/colorTextGray"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/et_Desc"
            android:layout_alignBottom="@+id/et_Desc"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="9dp"
            android:includeFontPadding="false"
            android:text="1 / 20"
            android:textColor="@color/colorTextGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_Desc"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="超过20个字符的部分会被剪裁掉"
            android:textColor="@color/colorTextGray"
            android:textSize="12sp"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>