<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/color_white_night"
        android:layout_gravity="center_horizontal"
        android:text="录音中"
        android:layout_marginTop="120dp" />

    <TextView
        android:id="@+id/tv_Time"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/color_white_night"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="181dp"
        android:text="0S"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvRecordMaxLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_white_night"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="228dp" />

    <RelativeLayout
        android:id="@+id/relativeRecord"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <org.xiaoxingqi.shengxi.wedgit.WaveView
            android:id="@+id/waveView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true" />

        <org.xiaoxingqi.shengxi.wedgit.GreyImageView
            android:id="@+id/iv_Record"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_transparent_recording_yellow" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvRecordDetails"
        android:layout_width="90dp"
        android:layout_marginEnd="15dp"
        android:layout_height="25dp"
        android:text="看图说话>>"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/color_text_white"
        android:layout_marginTop="37dp"
        android:layout_gravity="end"
        android:background="@drawable/shape_stroke_r_18_white" />


    <ImageView
        android:id="@+id/ivClose"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/icon_record_transparent_close" />

</FrameLayout>