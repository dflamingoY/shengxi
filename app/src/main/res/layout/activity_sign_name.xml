<?xml version="1.0" encoding="utf-8"?>

<org.xiaoxingqi.shengxi.wedgit.TransLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:defaultState="content"
    app:emptyLayout="@layout/view_empty"
    app:offlineLayout="@layout/view_offline"
    app:progressLayout="@layout/view_progress">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_white"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <ImageView
                android:id="@+id/btn_Back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:padding="4dp"
                android:visibility="gone"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/tv_Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_text"
                android:paddingBottom="6dp"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="6dp"
                android:text="@string/string_Next_step"
                android:textColor="#999999"
                android:textSize="12sp" />

        </android.support.v7.widget.Toolbar>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43dp"
            android:text="@string/string_signNameAct_1"
            android:textColor="@color/colorNormalIndecator"
            android:textSize="22sp" />


        <EditText
            android:id="@+id/et_Name"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:layout_marginTop="97dp"
            android:background="@drawable/shape_bound_stoken_r7_blue"
            android:hint="@string/string_signNameAct_2"
            android:maxLength="10"
            android:paddingLeft="24dp"
            android:singleLine="true"
            android:textColor="@color/colorNormalIndecator"
            android:textColorHint="@color/colorTextGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_Random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="49dp"
            android:drawableLeft="@mipmap/icon_random_name"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/string_signNameAct_3"
            android:textColor="@color/colorIndecators"
            android:textSize="13sp" />

    </LinearLayout>
</org.xiaoxingqi.shengxi.wedgit.TransLayout>