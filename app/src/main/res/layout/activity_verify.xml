<?xml version="1.0" encoding="utf-8"?>

<org.xiaoxingqi.shengxi.wedgit.TransLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:defaultState="content"
    app:emptyLayout="@layout/view_empty"
    app:offlineLayout="@layout/view_offline"
    app:progressLayout="@layout/view_progress">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_white">

        <ImageView
            android:id="@+id/btn_Back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp"
            android:text="@string/string_verifyAct_1"
            android:textColor="#333333"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="128dp"
            android:textSize="12sp" />

        <org.xiaoxingqi.shengxi.wedgit.BorderEditText
            android:id="@+id/bordEdit"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="23sp"
            app:border_Width="38" />

        <TextView
            android:id="@+id/reSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="282dp"
            android:background="@drawable/selector_details_btn"
            android:gravity="center"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="@string/string_verifyAct_2"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </RelativeLayout>
</org.xiaoxingqi.shengxi.wedgit.TransLayout>
