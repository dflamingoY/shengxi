<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/shape_white_r11">

    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hint_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:text="@string/string_commit_pwd_1"
            android:textColor="@color/colorText666666"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/string_commit_pwd_2"
            android:textColor="@color/colorText666666"
            android:textSize="13sp" />

        <org.xiaoxingqi.shengxi.wedgit.BorderEditText
            android:id="@+id/border_edit"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            app:border_Width="34" />

        <TextView
            android:id="@+id/tv_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:text="@string/string_commit_pwd_3"
            android:textColor="#FFFC5185"
            android:textSize="13sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:paddingLeft="20dp"
                android:paddingTop="17dp"
                android:paddingRight="20dp"
                android:paddingBottom="17dp"
                android:text="@string/string_commit_pwd_5"
                android:textColor="@color/color_switch_check"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                android:paddingLeft="20dp"
                android:paddingTop="17dp"
                android:paddingRight="20dp"
                android:paddingBottom="17dp"
                android:text="@string/string_commit_pwd_4"
                android:textColor="@color/colorText666666"
                android:textSize="13sp" />

        </RelativeLayout>

    </LinearLayout>

    <include
        android:id="@+id/layout_progress"
        layout="@layout/view_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linear_content"
        android:layout_alignBottom="@+id/linear_content"
        android:visibility="gone" />
</RelativeLayout>
