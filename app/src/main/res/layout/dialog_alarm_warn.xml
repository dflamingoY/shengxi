<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_r_8_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="45dp"
    android:layout_marginRight="45dp"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_Close"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:textSize="17sp"
        android:text="X"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:textColor="@color/color_eaeaea"
        android:layout_marginBottom="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textColor="@color/colorNormalIndecator"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:includeFontPadding="false"
        android:text="@string/string_system_limit"
        android:textSize="13sp"
        android:textColor="@color/color_b2b2b2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="13sp"
        android:text="@string/string_system_permission"
        android:textColor="@color/color_ffa77b"
        android:layout_marginTop="14dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:includeFontPadding="false"
        android:text="@string/string_confirm_permission"
        android:textSize="13sp"
        android:textColor="@color/color_b2b2b2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/tvSetPermission"
        android:layout_marginTop="29dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="36dp"
        android:background="@drawable/shape_blue_round_18"
        android:text="@string/string_open_permission"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/color_white_3e3e42" />

    <LinearLayout
        android:id="@+id/linear_no_again"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_marginTop="29dp"
        android:layout_height="wrap_content">

        <org.xiaoxingqi.shengxi.wedgit.CustomCheckImageView
            android:id="@+id/customCheck"
            android:layout_width="21dp"
            android:padding="3dp"
            android:layout_alignParentRight="true"
            app:checkOff="@mipmap/icon_custom_check_week"
            app:checkOn="@mipmap/icon_selector_check"
            android:layout_height="21dp" />

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不再提示"
            android:textSize="11sp"
            android:textColor="@color/color_b2b2b2" />

    </LinearLayout>

</LinearLayout>