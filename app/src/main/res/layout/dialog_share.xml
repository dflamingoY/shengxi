<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrayContent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearW"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/colorContentBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/linearWechat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_share_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_wechat"
                android:layout_marginTop="12dp"
                android:includeFontPadding="false"
                android:text="@string/string_Share_wechat_Friend"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearMoment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="86dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_moment"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_share_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_moment"
                android:layout_marginTop="12dp"
                android:text="@string/string_Share_wechat_Moments"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearQ"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@color/colorContentBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/linearQQ"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_share_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_qq"
                android:layout_marginTop="12dp"
                android:text="@string/string_Share_QQ_Friends"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearQzone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="86dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qzone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_share_qzone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_qzone"
                android:layout_marginTop="12dp"
                android:text="@string/string_Share_QQ_Zone"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_Cancel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorContentBackground"
        android:gravity="center"
        android:text="@string/string_cancel"
        android:textColor="@color/colorTextGray"
        android:textSize="15sp" />

</LinearLayout>