<?xml version="1.0" encoding="utf-8"?>

<org.xiaoxingqi.shengxi.wedgit.TransLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:defaultState="progress"
    app:emptyLayout="@layout/view_empty"
    app:offlineLayout="@layout/view_offline"
    app:progressLayout="@layout/view_progress">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorContentBackground"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorContentBackground"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/btn_Back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="4dp"
                    android:padding="4dp"
                    android:src="@mipmap/icon_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/string_net_server_1"
                    android:textColor="@color/colorNormalIndecator"
                    android:textSize="17sp" />


            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayContent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="139dp"
            android:lineSpacingExtra="9dp"
            android:text="@string/string_net_server_2"
            android:textColor="@color/colorNormalIndecator"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <org.xiaoxingqi.shengxi.wedgit.skinView.SkinStatueText
                android:id="@+id/tv_net_china"
                android:layout_width="108dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_net_server"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/string_net_server_3"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:statusTextSelected="@color/color_white_night" />

            <org.xiaoxingqi.shengxi.wedgit.skinView.SkinStatueText
                android:id="@+id/tv_net_us"
                android:layout_width="108dp"
                android:layout_height="38dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/selector_net_server"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Virgina(US)"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:statusTextSelected="@color/color_white_night" />

            <org.xiaoxingqi.shengxi.wedgit.skinView.SkinStatueText
                android:id="@+id/tv_net_jp"
                android:layout_width="108dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_net_server"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Tokyo(JP)"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:statusTextSelected="@color/color_white_night" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="27dp"
            android:background="@mipmap/icon_about_me_button"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/string_net_server_4"
            android:textColor="@color/colorTextGray"
            android:textSize="13sp" />

    </LinearLayout>
</org.xiaoxingqi.shengxi.wedgit.TransLayout>
