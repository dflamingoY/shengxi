<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorContentBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorContentBackground">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="19dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/roundImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_user_default" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_img_layer" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/iv_user_type"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignRight="@+id/cardView"
            android:layout_alignBottom="@+id/cardView"
            android:src="@drawable/selector_user_use_type"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivOfficial"
            android:layout_width="14dp"
            android:visibility="gone"
            android:layout_height="14dp"
            android:layout_alignRight="@+id/cardView"
            android:layout_alignBottom="@+id/cardView"
            android:src="@mipmap/icon_offical_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/cardView"
            android:layout_alignBottom="@+id/cardView"
            android:layout_toRightOf="@+id/cardView"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/colorNormalIndecator"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/linearTimes"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="9dp"
                    android:textColor="@color/colorTextGray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingRight="9dp"
                    android:singleLine="true"
                    android:textColor="@color/color_switch_check"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_Sub"
            android:layout_width="65dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_r_11_round_ff9797"
            android:gravity="center"
            android:text="送给室友"
            android:visibility="gone"
            android:textColor="@color/color_white_2_b2b2b2"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tvCollection"
            android:layout_width="63dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:textSize="9sp"
            android:textColor="@color/color_white_2_b2b2b2"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_r_11_round_ffa964"
            android:layout_marginRight="15dp"
            android:text="收藏" />

    </RelativeLayout>

    <org.xiaoxingqi.shengxi.wedgit.SqureRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.xiaoxingqi.shengxi.wedgit.SqureImageView
            android:id="@+id/square_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_img_layer" />
    </org.xiaoxingqi.shengxi.wedgit.SqureRelativeLayout>

    <LinearLayout
        android:id="@+id/linearOperate"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/colorContentBackground"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="14dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/relativeEcho"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_Thumb"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/selector_painter_like" />

            <TextView
                android:id="@+id/tv_Echo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/string_recommend"
                android:textColor="@color/colorTextGray"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineaer_Recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@mipmap/icon_graffiti" />

            <TextView
                android:id="@+id/tv_Recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="给ta涂鸦"
                android:textColor="@color/colorTextGray"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/relativeShare"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/selector_more_iv" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorGrayContent" />

</LinearLayout>