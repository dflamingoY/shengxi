<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="46dp"
    android:layout_marginRight="46dp"
    android:background="@drawable/shape_white_r11"
    android:orientation="vertical">

    <ImageView
        android:layout_width="27dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:src="@mipmap/icon_permission_audio" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="31dp"
        android:layout_marginRight="45dp"
        android:background="@color/color_Dividing" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/string_permission_9"
        android:textColor="#FF737373"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="45dp"
        android:background="@color/color_Dividing" />

    <RelativeLayout
        android:id="@+id/relativeRequestPermission"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/shape_blue_bottom_r11">

        <TextView
            android:layout_width="121dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_stroke_r_18_white"
            android:gravity="center"
            android:text="@string/string_statue_on"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>