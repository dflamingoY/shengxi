<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="46dp"
    android:layout_marginRight="46dp"
    android:background="@drawable/shape_white_r11"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tvDismiss"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="6dp"
        android:src="@mipmap/icon_x" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:text="@string/string_permission_1"
        android:textColor="@color/colorNormalIndecator"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/relativePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="29dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@+id/tvPhonePermission"
            android:src="@mipmap/icon_read_phone_state" />

        <TextView
            android:id="@+id/tvPhonePermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/string_permission_6"
            android:textColor="@color/colorNormalIndecator"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPhonePermission"
            android:layout_alignLeft="@+id/tvPhonePermission"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="10dp"
            android:text="@string/string_permission_7"
            android:textColor="#FF737373"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@+id/tvPhoneStorage"
            android:src="@mipmap/icon_read_external_storage" />

        <TextView
            android:id="@+id/tvPhoneStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="存储权限          "
            android:textColor="@color/colorNormalIndecator"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPhoneStorage"
            android:layout_alignLeft="@+id/tvPhoneStorage"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="10dp"
            android:text="@string/string_permission_8"
            android:textColor="#FF737373"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeRequestPermission"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_blue_bottom_r11">

        <TextView
            android:layout_width="121dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_stroke_r_18_white"
            android:gravity="center"
            android:text="@string/string_statue_on"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>