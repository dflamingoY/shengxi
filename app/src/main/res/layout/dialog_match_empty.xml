<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@color/colorContentBackground"
    app:cardBackgroundColor="@color/colorContentBackground"
    app:cardCornerRadius="11dp"
    app:cardElevation="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:includeFontPadding="false"
            android:text="@string/string_voice_call_16"
            android:textColor="@color/colorNormalIndecator"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="@string/string_voice_call_17"
            android:textColor="@color/colorTextGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_Close"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorIndecators"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/string_voice_call_18"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>
