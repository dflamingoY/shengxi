            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="250dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_guide_alarm_6"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="250dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_guide_alarm_7"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv8"
            android:layout_width="250dp"
