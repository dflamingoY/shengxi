<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw_alarm_alert_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="18dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_alarm_logo" />

        <TextView
            android:layout_marginLeft="25dp"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="声昔闹钟" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="48sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvDays"
        android:layout_marginTop="167dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_marginTop="226dp"
        android:id="@+id/alarm_alert_label"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:text="闹钟时间到,主人该起床啦!"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/alert_text_snooze"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="false"
        android:textSize="17sp" />

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/alert_button_snooze"
        android:background="@drawable/shape_r_14_orange"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="再睡一会儿"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginBottom="170dp" />

    <View
        android:id="@+id/alert_button_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:background="?android:attr/dividerHorizontal" />

    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/alert_button_dismiss"
        android:background="@drawable/shape_r_10_gray"
        android:layout_width="73dp"
        android:layout_marginBottom="81dp"
        android:layout_height="39dp"
        android:text="停止"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>