<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="119dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_Arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bound_r7_white"
        android:orientation="vertical">

        <org.xiaoxingqi.shengxi.wedgit.ViewScoreSetting
            android:id="@+id/viewNew"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            app:title_name="@string/string_new"
            app:title_selected="true" />

        <org.xiaoxingqi.shengxi.wedgit.ViewScoreSetting
            android:id="@+id/viewHot"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            app:title_name="@string/string_hot"
            app:title_selected="false" />

    </LinearLayout>

</RelativeLayout>