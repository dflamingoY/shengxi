<org.xiaoxingqi.shengxi.wedgit.TransLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBackground"
    app:defaultState="content"
    app:emptyLayout="@layout/view_empty"
    app:offlineLayout="@layout/view_offline"
    app:progressLayout="@layout/view_progress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrayContent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorContentBackground"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp">

                <ImageView
                    android:id="@+id/btn_Back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"
                    android:padding="4dp"
                    android:src="@mipmap/icon_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/string_setting_about_1"
                    android:textColor="@color/colorNormalIndecator"
                    android:textSize="17sp" />

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrayContent" />


        <org.xiaoxingqi.shengxi.wedgit.ViewMoreGroupView
            android:id="@+id/moreQuestion"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/colorContentBackground"
            app:title_name="@string/string_setting_3" />

        <org.xiaoxingqi.shengxi.wedgit.ViewMoreGroupView
            android:id="@+id/moreAbout"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorContentBackground"
            app:title_name="@string/string_setting_6" />

    </LinearLayout>


</org.xiaoxingqi.shengxi.wedgit.TransLayout>