<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeCover"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:clipChildren="false"
    android:background="#80000000"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivGuideScenes"
        android:layout_width="56dp"
        android:layout_height="23dp"
        android:alpha="0"
        android:src="@mipmap/icon_guide_sencens" />

    <ImageView
        android:id="@+id/ivGuideArrow"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/ivGuideScenes"
        android:layout_marginStart="50dp"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:visibility="gone"
        android:src="@mipmap/icon_home_gui_10" />

    <FrameLayout
        android:id="@+id/frameScenes"
        android:layout_below="@+id/ivGuideArrow"
        android:layout_marginTop="2dp"
        android:layout_marginStart="77dp"
        android:clipChildren="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivGuide1"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_1" />

        <ImageView
            android:id="@+id/ivGuide2"
            android:layout_width="120dp"
            android:visibility="gone"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_2" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivGuide3"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_3" />

        <ImageView
            android:id="@+id/ivGuide4"
            android:layout_width="120dp"
            android:visibility="gone"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_4" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivGuide5"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_5" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivGuide6"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_6" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivGuide7"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_7" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivGuide8"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_8" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivGuide9"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:src="@mipmap/icon_home_gui_9" />

    </FrameLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/tvDismiss"
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="我知道了"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frameScenes"
        android:background="@drawable/shape_stroke_r_18_white"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/relativeOther"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="246dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/icon_home_guide_slide" />

        <ImageView
            android:layout_width="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="178dp"
            android:layout_marginRight="43dp"
            android:layout_height="73dp"
            android:src="@mipmap/icon_home_guide_menu_arrow"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/ivGuidePlayMenu"
            android:layout_alignParentEnd="true"
            android:layout_width="104dp"
            android:layout_marginRight="7dp"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:layout_height="104dp"
            android:src="@mipmap/icon_home_guide_menu" />

    </RelativeLayout>

    <FrameLayout
        android:clipChildren="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="207dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="85dp"
        android:id="@+id/framePlayMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu1"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_1" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu2"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_2" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu3"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_3" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu4"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_4" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu5"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_5" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu6"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_6" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu7"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_7" />

        <ImageView
            android:id="@+id/ivPlayMenu8"
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_8" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu9"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_9" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivPlayMenu10"
            android:layout_width="200dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_home_guide_menu_10" />

    </FrameLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvNext"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="下一步"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_stroke_r_18_white"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/white" />

</RelativeLayout>